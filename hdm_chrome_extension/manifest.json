{
  "name": "Hanabi Download Manager Extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Hanabi Download Manager - 花火下载管理器",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["downloads", "webRequest", "activeTab", "storage", "notifications"],
  "host_permissions": ["<all_urls>"]
}
